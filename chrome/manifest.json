{
    "manifest_version": 2,

    "name": "DonaldTheDuck Browser Extension",
    "description": "This extension replaces all mentions and images of Donald Trump with Donald Duck",
    "version": "1.0",
    "icons": {"400": "assets/icon.png"},

    "web_accessible_resources": [
        "assets/donald_0.png",
        "assets/donald_1.png",
        "assets/donald_2.png",
        "assets/donald_3.png",
        "assets/donald_4.png",
        "assets/donald_5.png",
        "assets/donald_6.png"
    ],

    "browser_action": {
        "default_icon": "assets/icon.png",
        "default_popup": "popup.html"
    },

    "content_scripts": [
        {
            "matches": ["https://*/*", "http://*/*"],
            "css":     [],
            "js":      ["assets/mezr.min.js", "includes/constants.js", "includes/utils.js", "content.js"]
        }
    ],

    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "http://*/",
        "https://*/",
        "https://ajax.googleapis.com/"
    ]
}